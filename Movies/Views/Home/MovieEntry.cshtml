@{
    ViewData["Title"] = "Movie Entry";
}

@model Movies.Models.MovieModel

<h1>Movies</h1>
<form method="post">
    <input type="hidden" id="Id" asp-for="MovieId"/>
    <label for="Category">Category: </label>
    <select id="CategoryId" asp-for="CategoryId" type="text">
        <option value="">Select a Category</option>
        @foreach (Category x in ViewBag.Categories)
        {
            <option value="@x.CategoryId">@x.Name</option>
        }
    </select>  <br />

    <label for="Title">Title: </label>
    <input id="Title" asp-for="Title" type="text" /><br />

    <label for="Year">Year: </label>
    <input id="Year" asp-for="Year" type="number" /><br />

    <label for="Director">Director: </label>
    <input id="Director" asp-for="Director" type="text" /><br />

    <label for="Rating">Rating: </label>
    <select id="Rating" asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />

    <label for="Edited">Edited: </label>
    <select id="Edited" asp-for="Edited" type="text">
        <option value=" "></option> <!-- Soo, in the documentation, it says the response is optional, so we have true, false, or null-->
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <label for="LentTo">Lent To: </label>
    <input id="LentTo" asp-for="LentTo" type="text" /><br />

    <label for="Notes">Notes: </label>
    <input id="Notes" asp-for="Notes" type="text" maxlength="25" /><br />

    <div asp-validation-summary="All"></div>
    <button type="submit">Submit Movie</button>
</form>

