@{
    ViewData["Title"] = "Movie List";
}

@model List<MovieModel>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>MovieId</td>
            <td>Title</td>
            <td>Year</td>
            <td>Category</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
         {
        <tr>
            <td>@x.MovieId</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Category.Name</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
        </tr>
         }
        </tbody>
    </table>
